{% extends 'base.html.twig' %}

{% block stylesheets %}
    {{ parent() }}

    <link href="{{ asset('css/valoresindicadores.css') }}" rel="stylesheet" />
{% endblock %}


{% block body %}

<div class="row">
   <p class="navbar-text pull-left" style="font-weight:bold;font-size:18px;">Bienvenido <span style="color:#034EA2">'{{app.user.username}}'</span></p>
     <p class="navbar-text pull-right" style="margin-left:2px;"><a href="{{ path('fos_user_security_logout') }}" class="navbar-link btn btn-primary"></i> Cerrar sesi√≥n</a></p>
     <p class="navbar-text pull-right" style="margin-right:0px;"><a href="{{ asset('manual/ods_usermanual.pdf') }}" class="navbar-link btn btn-info" target="_blank" title="Ver manual de usuario" ><i class="fa fa-book"></i>  Manual de usuario</a></p>
</div>

	<div class="row">
	<ol class="breadcrumb">
  		<li class="active">Panel de usuario</li>
	</ol>
	</div>
<div class="row">
	<div class="panel-section"> 
		<div class="page-header">
		  <h2>Usuarios</h2>
		</div>
	</div>
	<div class="row">
    <div class="col-md-1">
      <a class="quick-btn" href="{{ path('fos_user_profile_show') }}">
        <i class="fa fa-user fa-3x"></i>
        <span>Mi perfil</span> 
      </a>
    </div>
      {% if is_granted('ROLE_SUPER_ADMIN') %}
      <div class="col-md-1">
      <a class="quick-btn" href="{{ path('admin_users_index') }}">
        <i class="fa fa-user-plus fa-3x"></i>
        <span>Administrar</span> 
      </a> 
    </div>
    {% endif %}
  </div>
</div>
<div class="row"> 
<div class="panel-section">
    <div class="page-header">
      <h2>Objetivos, metas e indicadores</h2>
    </div>
  </div>
  {% if is_granted('ROLE_ADMIN') %}
      {% if dataToAprove %}
        <div class="alert alert-warning alert-dismissible" role="alert">
        <button type="button" class="close" data-dismiss="alert" aria-label="Close"><span aria-hidden="true">&times;</span></button>
        <strong>Existen indicadores con valores sin aprobar!</strong>
        {% for id, codigo in dataToAprove %}
          <a href="{{ path('admin_crud_valoresindicadores_index', { 'id_indicador': id }) }}">{{codigo}}</a>
          {% if not loop.last %}
            ,
          {% endif %}
        {% endfor %}
      </div>
    {% endif %}
  {% endif %}


  <div class="row">
    <div class="col-md-1">
      <a class="quick-btn" href="{{ path('admin_crud_objetivos_index') }}">
        <i class="fa fa-globe fa-3x"></i>
        <span>Objetivos</span> 
        <span class="label label-primary">{{stats.objetivos_count}}</span>
      </a>
  </div>
    <div class="col-md-1">
      <a class="quick-btn" href="{{ path('admin_crud_metas_index') }}">
        <i class="fa fa-map-o fa-3x"></i>
        <span>Metas</span> 
        <span class="label label-warning">{{stats.metas_count}}</span>
      </a>
    </div>
      <div class="col-md-1">
      <a class="quick-btn" href="{{ path('admin_crud_indicadores_index') }}">
        <i class="fa fa-map fa-3x"></i>
        <span>Indicadores</span> 
        <span class="label label-success">{{stats.indicadores_count}}</span>
      </a>
    </div>
          <div class="col-md-1  col-md-offset-1">
      <a class="quick-btn" href="{{ path('admin_crud_desgloces_index') }}">
        <i class="fa fa-pencil fa-3x"></i>
        <span>Desgloses</span> 
      </a>
     </div>
      <div class="col-md-1">
      <a class="quick-btn" href="{{ path('admin_crud_etiquetas_index') }}">
        <i class="fa fa-tags fa-3x"></i>
        <span>Etiquetas</span> 
      </a>
    </div>
  </div>
</div>
<div class="row"> 
<div class="panel-section">
		<div class="page-header">
		  <h2>Valores indicadores</h2>
		</div>
	</div>
	<div class="row">
    <div class="col-md-1">
      <a class="quick-btn" href="{{ path('admin_crud_valoresindicadores_preload') }}">
        <i class="fa fa-plus-circle fa-3x"></i>
        <span>Cargar</span> 
      </a>
    </div>
      <div class="col-md-1">
      <a class="quick-btn" href="{{ path('admin_crud_valoresindicadores_visualize') }}">
        <i class="fa fa-eye fa-3x"></i>
        <span>Visualizar</span> 
      </a>
    </div>
	</div>
 </div>
{% endblock %}