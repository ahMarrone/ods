{% extends 'base.html.twig' %}

{% block body %}
    <ol class="breadcrumb">
        <li><a href="{{ path('paneluser_index') }}">Panel de usuario</a></li>
        <li class="active">Metas</a></li>
    </ol>
    <div class="page-header">
          <h1>Metas</h1>
    </div>

    <table id="metasTable" class="table table-striped table-bordered" cellspacing="0" width="100%">
        <thead>
            <tr>
                <th>Descripcion</th>
                <th>Id</th>
                <th>Acciones</th>
            </tr>
        </thead>
        <tbody>
        {% for meta in metas %}
            <tr>
                <td><a href="{{ path('admin_crud_metas_show', { 'id': meta.id }) }}">{{ meta.descripcion }}</a></td>
                <td>{{ meta.id }}</td>
                <td>
                    <ul>
                        <li>
                            <a href="{{ path('admin_crud_metas_show', { 'id': meta.id }) }}">mostrar</a>
                        </li>
                        <li>
                            <a href="{{ path('admin_crud_metas_edit', { 'id': meta.id }) }}">editar</a>
                        </li>
                    </ul>
                </td>
            </tr>
        {% endfor %}
        </tbody>
    </table>

    <a class="btn btn-success" href="{{ path('admin_crud_metas_new') }}">Crear nueva meta</a>



<script type="text/javascript">
    $(document).ready(function() {
    $('#metasTable').DataTable({
         "language": {
            "url": "/lang/datatables_spanish.json"
        }
    });
} );
</script>

{% endblock %}
