    <script type="text/javascript">
        $( document ).ready(function() {
            $('input:checkbox').change(function(){
                if ($(this).val()==0)
                {
                    $('input[type=checkbox]').each(function () {
                        if ($(this).val()!=0)
                            $(this).attr("checked", false);
                    });
                }
                else
                {
                    $('input[type=checkbox]').each(function () {
                        if ($(this).val()==0)
                            $(this).attr("checked", false);
                    });
                }
            });
        });
    </script>
