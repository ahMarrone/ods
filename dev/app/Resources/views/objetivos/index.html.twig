{% extends 'base.html.twig' %}

{% block body %}
    <ol class="breadcrumb">
        <li><a href="{{ path('paneluser_index') }}">Panel de usuario</a></li>
        <li class="active">Objetivos</a></li>
    </ol>
    <div class="page-header">
          <h1>Objetivos</h1>
    </div>

 <table id="objetivosTable" class="table table-striped table-bordered" cellspacing="0" width="100%">
        <thead>
            <tr>
                <th>Descripcion</th>
                <th>Id</th>
                <th>Acciones</th>
            </tr>
        </thead>
        <tbody>
        {% for objetivo in objetivos %}
            <tr>
                <td><a href="{{ path('admin_crud_objetivos_show', { 'id': objetivo.id }) }}">{{ objetivo.descripcion }}</a></td>
                <td>{{ objetivo.id }}</td>
                <td>
                    <ul>
                        <li>
                            <a href="{{ path('admin_crud_objetivos_show', { 'id': objetivo.id }) }}">mostrar</a>
                        </li>
                        <li>
                            <a href="{{ path('admin_crud_objetivos_edit', { 'id': objetivo.id }) }}">editar</a>
                        </li>
                    </ul>
                </td>
            </tr>
        {% endfor %}
        </tbody>
    </table>
            
    <a class="btn btn-success" href="{{ path('admin_crud_objetivos_new') }}">Crear nuevo objetivo</a>

<script type="text/javascript">
    $(document).ready(function() {
    $('#metasTable').DataTable({
         "language": {
            "url": "/lang/datatables_spanish.json"
        }
    });
} );
</script>
{% endblock %}
